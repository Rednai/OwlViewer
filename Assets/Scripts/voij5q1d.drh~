using System;
using System.IO;
using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEditor;

public class SceneManager : MonoBehaviour
{
    static public SceneManager instance;

    public GameObject objPrefab;

    private struct ExtensionHandler
    {
        public string extension;
        public Action<String> handler;
    }
    private ExtensionHandler[] extensionHandlers;

    private void Awake()
    {
        instance = this;

        extensionHandlers = new ExtensionHandler[] {
            new ExtensionHandler() { extension = ".obj", handler = OpenObj },
            new ExtensionHandler() { extension = ".stl", handler = OpenStl }
        };
    }

    public void OpenObject()
    {
        string path = EditorUtility.OpenFilePanel("Owl viewer", "", "obj,stl");

        if (path.Length == 0)
            return;

        string extension = Path.GetExtension(path).ToLower();

        ExtensionHandler extensionHandler = extensionHandlers
    }

    void addObjectToScene(GameObject obj)
    {
        GameObject newObj = Instantiate(objPrefab, new Vector3(0, 0, 0), Quaternion.identity);
        obj.transform.parent = newObj.transform;
        obj.transform.position = new Vector3(0, 0, 0);
    }

    private void OpenObj(string path)
    {

    }

    private void OpenStl(string path)
    {

    }
}
